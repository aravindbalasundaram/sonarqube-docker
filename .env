# =========================================
# SonarQube + PostgreSQL Environment Config
# =========================================

# --- Database Configuration ---
POSTGRES_USER=sonar
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=sonarqube

# --- SonarQube Configuration ---
SONAR_JDBC_URL=jdbc:postgresql://db:5432/sonarqube
SONAR_JDBC_USERNAME=sonar
SONAR_JDBC_PASSWORD=your_secure_password

# --- Ports ---
SONARQUBE_PORT=55000

# --- Container Names ---
POSTGRES_CONTAINER=postgres
SONARQUBE_CONTAINER=sonarqube

# --- Network ---
NETWORK_NAME=sonar-net

# --- Docker Volumes (external) ---
SONARQUBE_DATA=sonarqube-data
SONARQUBE_EXTENSIONS=sonarqube-extensions
SONARQUBE_LOGS=sonarqube-logs
SONARQUBE_DB=sonarqube-db
SONARQUBE_DB_DATA=sonarqube-db-data

# --- Restart Policy ---
RESTART_POLICY=unless-stopped
# --- IGNORE ---

# =========================================
# End of SonarQube + PostgreSQL Environment Config
# =========================================